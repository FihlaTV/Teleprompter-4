<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="15dp"
    tools:context="com.easyapps.teleprompter.presentation.MainActivity">

    <ListView
        android:id="@+id/lvFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top" />

    <ImageButton
        android:id="@+id/btnCreateFile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end|bottom"
        android:background="@drawable/ic_add"
        android:contentDescription="@string/btn_create_file_description"
        android:onClick="createTextFile"
        android:paddingBottom="20dp"
        android:text="@string/btn_create_file_description" />
</FrameLayout>
